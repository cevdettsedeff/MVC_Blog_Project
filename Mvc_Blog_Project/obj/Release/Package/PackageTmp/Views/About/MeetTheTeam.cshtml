@model IEnumerable<EntityLayer.Concrete.Author>

<head>
    <style>
        img#avatars {
            border-radius: 50%;
            height: 200px;
            width: 200px;
            object-fit: cover;
            box-shadow: 12px 12px 16px 0 rgba(0, 0, 0, 0.25), -8px -8px 12px 0 rgba(255, 255, 255, 0.3);
        }
    </style>
</head>
<body>
    <div class="site-section">
        <div class="container">
            <div class="row mb-5 justify-content-center">
                <div class="col-md-5 text-center">
                    <h2>Yazar Listemiz</h2>
                    <p>Sizlere birbirinden güzel içerikler sunan yazarlarımızın listesi aşağıda yer almaktadır. Eğer sizde yazarlarımızdan biri olmak isterseniz iletişim kutusundan bizlere ulaşabilirsiniz.</p>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-5 text-center">
                        <img src="@item.AuthorImage" alt="Avatar" id="avatars" class="img-fluid w-50 rounded-circle mb-4">
                        <h2 class="mb-3 h5">@item.AuthorName</h2>
                        <p>@item.AuthorAbout</p>

                        <p class="mt-5">
                            <a href="#" class="p-3"><span class="icon-facebook"></span></a>
                            <a href="#" class="p-3"><span class="icon-instagram"></span></a>
                            <a href="#" class="p-3"><span class="icon-twitter"></span></a>
                        </p>

                    </div>
                }
            </div>
        </div>
    </div>
</body>