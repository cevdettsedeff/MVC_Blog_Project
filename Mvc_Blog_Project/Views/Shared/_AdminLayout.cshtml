
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin Paneli</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="shortcut icon" href="~/Images/CLetter2.jpg" type="~/Images/CLetter2.jpg">

</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <!-- Site wrapper -->
    <div class="wrapper">
        
    <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Blog/Index" class="nav-link">Blog Sayfasına Dön</a>
                </li>
                @*<li> class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li>*@
            </ul>

        </nav>
        <!-- /.navbar --


          <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/Blog/AdminBlogList" class="brand-link">
                <img src="~/Images/CLetter2.jpg"
                     alt="AdminLTE Logo"
                     class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">CevvTech.com</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar" >              
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
 
                    <div class="info">
                        <a href="#" class="d-block">&nbsp;&nbsp;&nbsp;&nbsp;Admin Kontrol Paneli</a>
                    </div>
                </div>


          
                <nav class="mt-2" >
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item">
                            <a href="/Blog/AdminBlogList" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Bloglar
                                </p>
                            </a>
                        </li>


                        <li class="nav-item">
                            <a href="/Blog/AdminBlogList2" class="nav-link">
                                <i class="nav-icon fas fa-blog"></i>
                                <p>
                                    Bloglar Hızlı Bakış
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Author/AuthorList" class="nav-link">
                                <i class="nav-icon fas fa-people-arrows"></i>
                                <p>
                                    Yazarlar
                                </p>
                            </a>
                        </li>


                        @if (User.IsInRole("A"))
                        {
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-comment"></i>
                                    <p>
                                        Yorumlar
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>

                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="/Comment/AdminCommentListTrue" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Yayınlanan Yorumlar</p>
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a href="/Comment/AdminCommentListFalse" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Kaldırılan Yorumlar</p>
                                        </a>
                                    </li>
                                </ul>

                            </li>
                        }
                        <li class="nav-item">
                            <a href="/Category/AdminCategoryList" class="nav-link">
                                <i class="nav-icon fas fa-box"></i>
                                <p>
                                    Kategoriler
                                </p>
                            </a>
                        </li>
                        @if (User.IsInRole("A"))
                        {
                            <li class="nav-item">
                                <a href="/About/UpdateAboutList" class="nav-link">
                                    <i class="nav-icon fas fa-address-book"></i>
                                    <p>
                                        Hakkımızda
                                    </p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a href="/Contact/ReceiveBox" class="nav-link">
                                    <i class="nav-icon fas fa-phone"></i>
                                    <p>
                                        İletişim
                                    </p>
                                </a>
                            </li>


                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-chart-pie"></i>
                                    <p>
                                        Grafikler
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>

                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="/Chart/Chart1" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Derece Grafiği</p>
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a href="/Chart/Chart2" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Sütun Grafiği</p>
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a href="/Chart/Chart3" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Çizgi Grafiği</p>
                                        </a>
                                    </li>
                                </ul>

                            </li>
                        }

                        <li class="nav-item">
                            <a href="/Admin/AdminList/" class="nav-link">
                                <i class="nav-icon fas fa-industry"></i>
                                <p>
                                    Yetkilendirme
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Login/AdminLogin/" class="nav-link">
                                <i class="nav-icon fas fa-key"></i>
                                <p>
                                    Çıkış Yap
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </section>
            <!-- Main content -->
            <!-- /.content -->
        </div>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    
    <!-- jQuery -->
    <script src="/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>

