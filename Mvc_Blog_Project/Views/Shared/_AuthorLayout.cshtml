        </nav>
        <!-- /.navbar --


          <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/User/BlogList" class="brand-link">
                <img src="~/Images/CLetter2.jpg"
