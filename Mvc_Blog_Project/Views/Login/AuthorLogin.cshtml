
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Yazar Giriş Paneli</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Author Login Form/css/style.css">
    <link rel="shortcut icon" href="~/Images/CLetter2.jpg" type="~/Images/CLetter2.jpg">

</head>
<body class="img js-fullheight" style="background-image: url('/Author Login Form/images/bg2.jpg');">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Yazar Giriş Paneli</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        @using (Html.BeginForm("AuthorLogin", "Login", FormMethod.Post))
                        {
                            <form action="#" class="signin-form">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="AuthorMail" placeholder="Mail Adresi" required>
                                </div>
                                <div class="form-group">
                                    <input id="password-field" name="AuthorPassword" type="password" class="form-control" placeholder="Şifre" required>
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-50">
                                        <label class="checkbox-wrap checkbox-primary">
                                            Beni Hatırla
                                            <input type="checkbox" checked>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="w-50 text-md-right">
                                        <a href="#" style="color: #fff">Şifreni mi unuttun?</a>
                                    </div>
                                </div>
                            </form>
                            <p class="w-100 text-center">&mdash; Yönetici girişi için aşağıdaki linke tıklayınız &mdash;</p>
                            <div class="social d-flex text-center">
                                <a href="/Login/AdminLogin" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Yönetici Girişi</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/Author Login Form/js/jquery.min.js"></script>
    <script src="/Author Login Form/js/popper.js"></script>
    <script src="/Author Login Form/js/bootstrap.min.js"></script>
    <script src="/Author Login Form/js/main.js"></script>

</body>
</html>

