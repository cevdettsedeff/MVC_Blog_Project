@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>



<body class="hold-transition sidebar-mini">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title"><strong>Tüm Bloglar</strong></h2>

            <div class="card-tools">
            </div>
        </div>

        <div class="card-body p-0">

            <table class="table table-striped projects">
                <tr>
                    <th>ID</th>
                    <th>Blog Başlığı</th>
                    <th>Kategori</th>
                    <th>Tarih</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Detaylar</th>
                    <th>Yorumlar</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BlogID</td>
                        <td><a target="_blank" href="/Blog/BlogDetails/@item.BlogID">@item.BlogTitle</a></td>
                        <td>@item.Category.CategoryName</td>
                        <td>@item.BlogDate.ToShortDateString()</td>
                        <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Blog/UpdateBlog/@item.BlogID" class="btn btn-success">Güncelle</a></td>
                        <td><a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-warning">Detaylar</a></td>
                        <td><a href="/Blog/GetCommentByBlog/@item.BlogID" class="btn btn-secondary">Yorumlar</a></td>
                    </tr>
                }
            </table>


        </div>
    </div>

    <a href="/Blog/AddNewBlog/" class="btn btn-primary">Yeni Blog Ekle</a>
</body>