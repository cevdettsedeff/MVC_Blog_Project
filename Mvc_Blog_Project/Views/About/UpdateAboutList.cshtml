@model IEnumerable<EntityLayer.Concrete.About>

@{
    ViewBag.Title = "UpdateAboutList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">

    <!-- Main content -->
    <section class="content">
        
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><strong>Hakkımızda Sayfası Düzenleme</strong></h3>

                        
                    </div>

                    @using (Html.BeginForm("UpdateAbout","About",FormMethod.Post)) { 
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <div class="form-group">
                                <label for="inputName">ID</label>
                                <input type="text" readonly="readonly" name="AboutID" class="form-control" value="@item.AboutID">
                            </div>

                            <div class="form-group">
                                <label for="inputName">Görsel 1</label>
                                <input type="text" name="AboutImage1" class="form-control" value="@item.AboutImage1">
                            </div>

                            <div class="form-group">
                                <label for="inputName">Görsel 2</label>
                                <input type="text" name="AboutImage2" class="form-control" value="@item.AboutImage2">
                            </div>

                            <div class="form-group">
                                <label for="inputDescription">Açıklama 1</label>
                                <textarea name="AboutContent1" class="form-control" rows="4">@item.AboutContent1</textarea>
                            </div>

                            <div class="form-group">
                                <label for="inputDescription">Açıklama 2</label>
                                <textarea name="AboutContent2" class="form-control" rows="4">@item.AboutContent2</textarea>
                            </div>
                        }
                    <button class="btn btn-success">Güncelle</button> 
                    </div>
                    <!-- /.card-body -->
                    }
                </div>
                <!-- /.card -->

            @*</div>
        </div>*@
    </section>
</body>
</html>

